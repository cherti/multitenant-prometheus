[Unit]
Description=Prometheus Server Instance
After=network-online.service
Wants=network-online.target

[Service]
User=prometheus
Type=simple
ExecStart=/usr/bin/prometheus --config.file={{ promconfd }}/prometheus.yml --storage.tsdb.path={{ promstoraged }}/prometheus --storage.tsdb.retention="30d" --web.listen-address=127.0.0.1:9090 --web.external-url=https://prometheus.{{ server_name }}
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
